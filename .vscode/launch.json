{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "produceCompileArgsFile",
            "preRunCommands": [
                "command script import setup_LLDB_args.py"
            ],
            "name": "LLDB Debug Module",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/clang",
            "args": [
                "--target=wasm32-unknown-wasi",
                "--sysroot",
                "/scratch/martin/src/wasm/wasi-libc/sysroot",
                "${input:fileToCompile}"
            ],
            "cwd": "${env:LINUX}",
            "terminal": "console",
            "postDebugTask": "removCompileArgsFile"
        },
        // {
        //     "name": "LLDB Compile Command",
        //     "type": "lldb",
        //     "preLaunchTask": "LLVM Build Clang",
        //     "request": "launch",
        //     "program": "${workspaceFolder}/build/bin/clang",
        //     "args": "",
        //     "cwd": "${env:LINUX}",
        //     "terminal": "console",
        // }
    ],
    "inputs": [
        {
            "id": "fileToCompile",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args": {
                "fromFolder": {
                    "fixed": "/scratch/martin/src/wasm/hello-world"
                },
                "include": "**/*.c"
            }
        }
    ]
}
