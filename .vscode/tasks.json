{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "LLVM Configure",
			"command": "./proj_bdo_llvm_build.py",
			"args": [
				"config"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "LLVM Build Clang",
			"command": "./proj_bdo_llvm_build.py",
			"args": [
				"build",
				"clang"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "LLVM Build All",
			"command": "./doitlk-llvm-build.py",
			"args": [
				"build",
				"all"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "LLVM Build",
			"command": "./proj_bdo_llvm_build.py",
			"args": [
				"build",
				"${input:target}"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "produceCompileArgsFile",
			"hide": true,
			"command": "./proj_bdo_debug_get_compile_command_args.py",
			"args": [
				"writeArgsToFile",
				"${input:objectCompileCommandsPath}"
			],
			"problemMatcher": [],
			"dependsOn": [
				"LLVM Build Clang"
			]
		},
		{
			"type": "shell",
			"label": "removCompileArgsFile",
			"hide": true,
			"command": "./proj_bdo_debug_get_compile_command_args.py",
			"args": [
				"clean"
			],
			"problemMatcher": []
		},
	],
	"inputs": [
		{
			"id": "target",
			"type": "promptString",
			"description": "CMake Build Target"
		},
		{
			"id": "objectCompileCommandsPath",
			"type": "command",
			"command": "extension.commandvariable.file.pickFile",
			"args": {
				"fromFolder": {
					"fixed": "/scratch/martin/src/linux/"
				},
				"include": "**/.*.o.cmd"
			}
		},
	]
}